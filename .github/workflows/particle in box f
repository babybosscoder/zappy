clc
clear
clf
n=linspace(0,1,1000)
X=zeros(length(n),length(n))
h=n(2)-n(1);
for i=2:length(n)-1
    X(i,i)=-2
    X(i,i-1)=1  
    X(i,i+1)=1
end
X(1,1)=-2;X(1,2)=1;X(length(n),length(n)-1)=1;X(length(n),length(n))=-2
X=X*(1/(h^2))
X=X*((-1973*1973)/(2*.511*10^6))//eV A^2

//disp(X)
[a,b]=spec(X)
//disp("Eigenfunction = ",a(:,1))
disp("Eigenvalues = ",diag(b))
for i=1:6
    subplot(4,3,i)
    plot(n,a(:,i)','r')
    xgrid
    xlabel("X(Angstrom)---->")
    ylabel('(â¨š)----->')
end
//for prob plot

for i=1:6
    subplot(4,3,i+6)
    plot(n,a(:,i)'**2,'r')
    xgrid
    xlabel("X(Angstrom)---->")
    ylabel('â¨š^2(Probability Density)----->')
end
